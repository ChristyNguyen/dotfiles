set nocompatible
filetype off

filetype plugin indent on
syntax on

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set shiftround
set autoindent
set smartindent
set number
set colorcolumn=120

set nobackup
set nowritebackup
set noswapfile
set hidden
set autoread

set ignorecase 
set smartcase
set incsearch
set showmatch
set hlsearch
set gdefault

set virtualedit+=block

noremap j gj
noremap k gk